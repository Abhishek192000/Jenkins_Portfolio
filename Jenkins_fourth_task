pipeline {
    agent any
    stages {
        stage('Validate Input') {
            steps {
                script {
                    def version = input(
                        message: 'Enter Build Version:',
                        parameters: [string(name: 'VER', defaultValue: '', description: 'e.g. 1.0.1')]
                    )
                    if (version == "" || version == null) {
                        error "Build Aborted: Version is empty!"
                    } else {
                        echo "Version set to: ${version}"
                    }
                }
            }
        }
    }
}

